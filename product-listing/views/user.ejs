<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All users</title>
    <style>
        *{
            color: white;
        }
        #root{
            min-height:100vh ;
            width: 100vw;
            border: 1px solid white;
        }
        .ir{
            border: 2px solid saddlebrown;
            height: 10vh;
            display: flex;
            justify-content: space-around;
        }
    </style>
</head>
<body>
    <div id="root"></div>
    <script>
        let root = document.getElementById('root')
        fetch('/AllUsers')
  .then(response => response.json())
  .then(data => {
    // Process the retrieved data
    console.log(data); // Output: ['User 1', 'User 2', 'User 3']
    data.map((items)=>{
        const { name, email } = items;
                    let innerRoot = document.createElement('div');
                    innerRoot.className = 'ir';
                    let nameElement = document.createElement('span');
                    let emailElement = document.createElement('span');
                    nameElement.innerHTML = name;
                    emailElement.textContent = email;
                    innerRoot.appendChild(nameElement);
                    innerRoot.appendChild(emailElement);
                    root.appendChild(innerRoot);
                    console.log(name, email);
    })
  })
  .catch(error => {
    console.error(error);
  });


    </script>
</body>

</html>